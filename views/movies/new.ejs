<%- include("../partials/header") %>

<div id="movieChoice" class="container-md">
    
    <div id="movieNew" class="container">
        <% if (movie1 === null && movie2 === null) { %>
            <form action="/movies/movieQuery" method="GET">
                <button id="reveal" type="submit">Reveal</button>
            </form>
            
        <% } else { %>
        <p><%= movie1.title ? movie1.title : "N/A" %></p>
        <p>Rating:<%= movie1.vote_average %></p>
        <p>Synopsis:<%= movie1.overview %></p>
        <img src="https://image.tmdb.org/t/p/w300<%= movie1.poster_path %>"onerror="src="https://www.theprintworks.com/wp-content/themes/psBella/assets/img/film-poster-placeholder.png"">
        <form action="/movies/<%= movie1.title %>/collection" method="POST">
              <input type="text" hidden name="title" value="<%= movie1.title %>">
              <input type="text" hidden name="poster_path" value="<%= movie1.poster_path %>">
              <input type="text" hidden name="vote_average" value="<%= movie1.vote_average %>">
              <input type="text" hidden name="overview" value="<%= movie1.overview %>">
              <button class="btn btn-success">Add to Collection</button>
        </form>


    </div>

    <div id="movieNew" class="container">
        
        
        <p><%= movie2.title ? movie2.title : "N/A" %></p>
        <p>Rating:<%= movie2.vote_average %></p>
        <p>Synopsis:<%= movie2.overview %></p>
        <img src="https://image.tmdb.org/t/p/w300<%= movie2.poster_path %>" onerror="src="https://www.theprintworks.com/wp-content/themes/psBella/assets/img/film-poster-placeholder.png"">
        <form action="/movies/<%= movie2.title %>/collection" method="POST">
            <input type="text" hidden name="title" value="<%= movie2.title %>">
            <input type="text" hidden name="poster_path" value="<%= movie2.poster_path %>">
            <input type="text" hidden name="vote_average" value="<%= movie2.vote_average %>">
            <input type="text" hidden name="overview" value="<%= movie2.overview %>">
            <button class="btn btn-success">Add to Collection</button>
        </form>
        <% } %>
    </div>
    <form action="/movies/movieQuery" method="GET">
        <button type="submit">Try Again!</button>
    </form>
</div>

<%- include("../partials/footer") %>